	bankOfMohammed.put(1342, new BankAccount(100f, "Mohammed"));
	bankOfMohammed.put(2189, new BankAccount(100f, "Iqra"));
	bankOfMohammed.put(3424, new BankAccount(100f, "Adnan"));
